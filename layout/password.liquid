      <div class="nitted-hero-cta-sub">You'll get first access & a secret discount üëÄ</div>
    </header>
    <!-- Visual Preview Section -->
    <section class="nitted-preview reveal">
      <div class="nitted-preview-scroll">
        <!-- Replace these with your own images in assets/ -->
        <div class="nitted-preview-img" style="background-image:url('{{ 'placeholder-hoodie.jpg' | asset_url }}');"></div>
        <div class="nitted-preview-img" style="background-image:url('{{ 'placeholder-texture.jpg' | asset_url }}');"></div>
        <div class="nitted-preview-img" style="background-image:url('{{ 'placeholder-lifestyle.jpg' | asset_url }}');"></div>
      </div>
