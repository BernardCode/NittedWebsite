    <!-- Footer -->
    <footer class="nitted-footer">
      <div class="nitted-footer-row">
        <small>¬© nitted 2025. Designed for comfort.</small>
      </div>
      <form method="post" action="/account" accept-charset="UTF-8" class="nitted-footer-email-form" autocomplete="off">
        <input type="hidden" name="form_type" value="customer" />
        <input type="hidden" name="utf8" value="‚úì" />
        <input type="email" name="contact[email]" class="nitted-footer-email-input" placeholder="Sign up to never miss a drop" required>
        <button type="submit" class="nitted-footer-email-btn">‚Üí</button>
      </form>
      <nav class="nitted-footer-nav">
        <a href="#" class="nitted-footer-link">About</a>
        <a href="#" class="nitted-footer-link">Contact</a>
        <a href="#" class="nitted-footer-link">Instagram</a>
        <a href="#" class="nitted-footer-link">FAQ</a>
      </nav>
    </footer>
    <!-- SVG Sprite for Social Icons (replace with your own SVGs if desired) -->
    <svg style="display:none;">
      <symbol id="icon-instagram" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/><rect x="7.5" y="7.5" width="9" height="9" rx="4.5" stroke="currentColor" stroke-width="2" fill="none"/><circle cx="17" cy="7" r="1.2" fill="currentColor"/></symbol>
      <symbol id="icon-tiktok" viewBox="0 0 24 24"><path d="M9 8v8a3 3 0 1 0 3-3h-1" stroke="currentColor" stroke-width="2" fill="none"/><path d="M15 3v2a4 4 0 0 0 4 4h1" stroke="currentColor" stroke-width="2" fill="none"/></symbol>
      <symbol id="icon-pinterest" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/><path d="M12 17c-2.5 0-4-1.5-4-4 0-2.5 1.5-4 4-4s4 1.5 4 4c0 2.5-1.5 4-4 4z" stroke="currentColor" stroke-width="2" fill="none"/></symbol>
    </svg>
    <!-- Sticky CTA for mobile -->
    <div class="nitted-sticky-cta">
      <form method="post" action="/account" accept-charset="UTF-8" class="nitted-sticky-form" autocomplete="off">
        <input type="hidden" name="form_type" value="customer" />
        <input type="hidden" name="utf8" value="‚úì" />
        <input type="email" name="contact[email]" class="nitted-sticky-input" placeholder="Enter your email" required>
        <button type="submit" class="nitted-sticky-btn">Join Waitlist</button>
      </form>
    </div>
  </body>
</html>
