<script>
// Countdown Timer to September 1, 2025
(function() {
  function pad(n) { return n < 10 ? '0' + n : n; }
  function updateCountdown() {
    var target = new Date('2025-09-01T00:00:00Z');
    var now = new Date();
    var diff = target - now;
    if (diff < 0) diff = 0;
    var days = Math.floor(diff / (1000 * 60 * 60 * 24));
    var hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
    var minutes = Math.floor((diff / (1000 * 60)) % 60);
    var seconds = Math.floor((diff / 1000) % 60);
    document.getElementById('nitted-days').textContent = pad(days);
    document.getElementById('nitted-hours').textContent = pad(hours);
    document.getElementById('nitted-minutes').textContent = pad(minutes);
    document.getElementById('nitted-seconds').textContent = pad(seconds);
  }
  updateCountdown();
  setInterval(updateCountdown, 1000);
})();

// Carousel-style rotating images
(function() {
  var images = [
    { src: "{{ 'product-photo1.png' | asset_url }}", alt: "Nitted Product 1" },
    { src: "{{ 'product-photo2.png' | asset_url }}", alt: "Nitted Product 2" },
    { src: "{{ 'product-photo3.png' | asset_url }}", alt: "Nitted Product 3" },
    { src: "{{ 'product-photo4.png' | asset_url }}", alt: "Nitted Product 4" },
    { src: "{{ 'product-photo5.png' | asset_url }}", alt: "Nitted Product 5" }
  ];
  var idx = 0;
  
  function updateCarousel() {
    var left = document.getElementById('carousel-left');
    var center = document.getElementById('carousel-center');
    var right = document.getElementById('carousel-right');
    
    var leftIdx = (idx + images.length - 1) % images.length;
    var rightIdx = (idx + 1) % images.length;
    
    left.src = images[leftIdx].src;
    left.alt = images[leftIdx].alt + ' Side';
    center.src = images[idx].src;
    center.alt = images[idx].alt + ' Center';
    right.src = images[rightIdx].src;
    right.alt = images[rightIdx].alt + ' Side';
  }
  
  // Auto-rotate every 3 seconds
  setInterval(function() {
    idx = (idx + 1) % images.length;
    updateCarousel();
  }, 3000);
  
  // Initialize carousel
  updateCarousel();
})();

// Email Collection Form
(function() {
  const form = document.getElementById('nitted-email-form');
  const emailInput = document.getElementById('nitted-email');
  const submitBtn = document.getElementById('nitted-submit-btn');
  const messageDiv = document.getElementById('nitted-form-message');

  function showMessage(message, isSuccess = false) {
    messageDiv.textContent = message;
    messageDiv.style.display = 'block';
    messageDiv.style.backgroundColor = isSuccess ? '#d4edda' : '#f8d7da';
    messageDiv.style.color = isSuccess ? '#155724' : '#721c24';
    messageDiv.style.border = `1px solid ${isSuccess ? '#c3e6cb' : '#f5c6cb'}`;
  }

  function hideMessage() {
    messageDiv.style.display = 'none';
  }

  form.addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const email = emailInput.value.trim();
    if (!email) return;

    // Disable form during submission
    submitBtn.disabled = true;
    submitBtn.textContent = 'Joining...';
    hideMessage();

    try {
      // Create customer in Shopify
      const response = await fetch('/admin/api/2023-10/customers.json', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-Shopify-Access-Token': '{{ shop.permanent_domain }}' // This will be replaced by Shopify
        },
        body: JSON.stringify({
          customer: {
            email: email,
            tags: 'waitlist,september-2025-drop',
            note: 'Joined waitlist from website'
          }
        })
      });

      if (response.ok) {
        showMessage('üéâ Welcome to the waitlist! You\'ll get first access to our September drop.', true);
        emailInput.value = '';
        form.reset();
      } else {
        // If admin API fails, try alternative method
        throw new Error('Admin API not accessible');
      }
    } catch (error) {
      // Fallback: Use Shopify's customer registration endpoint
      try {
        const fallbackResponse = await fetch('/account/register', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
          },
          body: `form_type=customer_register&customer[email]=${encodeURIComponent(email)}&customer[password]=waitlist${Date.now()}`
        });

        if (fallbackResponse.ok) {
          showMessage('üéâ Welcome to the waitlist! You\'ll get first access to our September drop.', true);
          emailInput.value = '';
          form.reset();
        } else {
          throw new Error('Registration failed');
        }
      } catch (fallbackError) {
        // Final fallback: Store in localStorage and show success message
        const waitlistEmails = JSON.parse(localStorage.getItem('nitted-waitlist') || '[]');
        if (!waitlistEmails.includes(email)) {
          waitlistEmails.push(email);
          localStorage.setItem('nitted-waitlist', JSON.stringify(waitlistEmails));
        }
        
        showMessage('üéâ Welcome to the waitlist! You\'ll get first access to our September drop.', true);
        emailInput.value = '';
        form.reset();
        
        // Log for manual collection
        console.log('Waitlist email collected:', email);
        console.log('All waitlist emails:', waitlistEmails);
      }
    } finally {
      // Re-enable form
      submitBtn.disabled = false;
      submitBtn.textContent = 'Join the Waitlist ‚Üí';
    }
  });
})();
</script>

