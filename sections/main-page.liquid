<script>
// Robust, truly infinite, virtualized horizontal gallery (fixed slots, virtual scroll, no DOM jumps)
(function() {
  var imageSources = [
    "{{ 'product-photo1.png' | asset_url }}",
    "{{ 'product-photo2.png' | asset_url }}",
    "{{ 'product-photo1.png' | asset_url }}",
    "{{ 'product-photo2.png' | asset_url }}"
  ];
  var outer = document.querySelector('.nitted-infinite-gallery-outer');
  var inner = document.getElementById('nitted-infinite-gallery-inner');
  var imgHeight = window.innerWidth < 700 ? 100 : 220;
  var imgWidth = window.innerWidth < 700 ? 160 : 320;
  var imgMargin = window.innerWidth < 700 ? 8 : 18;
  var slotCount = 12; // Always render this many slots
  var MAX_VELOCITY = 3;
  var state = {
    scroll: 0, // virtual scroll position in px
    dragging: false,
    dragStartX: 0,
    dragStartScroll: 0,
    rafId: null,
    velocity: 0.15,
    lastX: 0,
    lastMoveTime: 0,
    userVelocity: 0,
    easing: false
  };

  // Set up flexbox layout
  inner.style.display = 'flex';
  inner.style.flexDirection = 'row';
  inner.style.alignItems = 'center';
  inner.style.position = 'absolute';
  inner.style.left = '0';
  inner.style.top = '0';
  inner.style.height = '100%';

  function mod(n, m) {
    return ((n % m) + m) % m;
  }

  function createSlot() {
    var img = document.createElement('img');
    img.className = 'nitted-infinite-img';
    img.draggable = false;
    img.style.width = imgWidth + 'px';
    img.style.height = imgHeight + 'px';
    img.style.objectFit = 'contain';
    img.style.margin = '0 ' + imgMargin + 'px';
    img.style.flex = '0 0 auto';
    img.style.position = 'absolute';
    img.style.top = '50%';
    img.style.transform = 'translateY(-50%)';
    return img;
  }

  function fillSlots() {
    inner.innerHTML = '';
    for (var i = 0; i < slotCount; i++) {
      inner.appendChild(createSlot());
    }
  }

  function updateSlots() {
    var imgs = Array.from(inner.children);
    var vw = outer.offsetWidth;
    var totalImgWidth = imgWidth + 2 * imgMargin;
    // The index of the image at the leftmost slot
    var firstIdx = Math.floor(state.scroll / totalImgWidth);
    var offsetPx = state.scroll % totalImgWidth;
    for (var i = 0; i < slotCount; i++) {
      var imgIdx = firstIdx + i;
      var srcIdx = mod(imgIdx, imageSources.length);
      var img = imgs[i];
      if (img.src !== imageSources[srcIdx]) img.src = imageSources[srcIdx];
      img.alt = 'Nitted product photo ' + (srcIdx + 1);
      // Position slot 0 at the left edge, lay out to the right
      var x = (i * totalImgWidth) - offsetPx;
      img.style.left = x + 'px';
    }
  }

  function rafUpdate() {
    if (state.velocity > MAX_VELOCITY) state.velocity = MAX_VELOCITY;
    if (state.velocity < -MAX_VELOCITY) state.velocity = -MAX_VELOCITY;
    if (!state.dragging) {
      state.scroll += state.velocity;
    }
    updateSlots();
    state.rafId = requestAnimationFrame(rafUpdate);
  }

  function onPointerDown(e) {
    state.dragging = true;
    state.dragStartX = e.type.startsWith('touch') ? e.touches[0].clientX : e.clientX;
    state.dragStartScroll = state.scroll;
    state.lastX = state.dragStartX;
    state.lastMoveTime = Date.now();
    state.userVelocity = 0;
    state.easing = false;
    outer.style.cursor = 'grabbing';
  }
  function onPointerMove(e) {
    if (!state.dragging) return;
    var x = e.type.startsWith('touch') ? e.touches[0].clientX : e.clientX;
    var dx = x - state.dragStartX;
    state.scroll = state.dragStartScroll - dx;
    var now = Date.now();
    var dt = now - state.lastMoveTime;
    if (dt > 0) {
      state.userVelocity = -(x - state.lastX) / dt * 16;
    }
    state.lastX = x;
    state.lastMoveTime = now;
    updateSlots();
  }
  function onPointerUp(e) {
    state.dragging = false;
    outer.style.cursor = '';
    state.easing = true;
    easeToAutoscroll();
  }

  function easeToAutoscroll() {
    if (!state.easing) return;
    if (Math.abs(state.userVelocity) > 0.2) {
      state.velocity = state.userVelocity * 0.95 + 0.15 * 0.05;
      state.userVelocity *= 0.95;
      requestAnimationFrame(easeToAutoscroll);
    } else {
      state.velocity = 0.15;
      state.userVelocity = 0;
      state.easing = false;
    }
  }

  outer.addEventListener('mousedown', onPointerDown);
  window.addEventListener('mousemove', onPointerMove);
  window.addEventListener('mouseup', onPointerUp);
  outer.addEventListener('touchstart', onPointerDown, {passive:false});
  window.addEventListener('touchmove', onPointerMove, {passive:false});
  window.addEventListener('touchend', onPointerUp);
  outer.addEventListener('dragstart', function(e) { e.preventDefault(); });
  window.addEventListener('resize', function() {
    fillSlots();
    updateSlots();
  });

  fillSlots();
  updateSlots();
  rafUpdate();
})();

// Live countdown timer to August 1st, 2025, 12:00 PM local time
(function() {
  // Set the target date to August 1st, 2025, 12:00 PM local time
  const targetDate = new Date(2025, 7, 1, 12, 0, 0); // month is 0-indexed, so 7 = August

  function updateCountdown() {
    const now = new Date();
    const diff = targetDate - now;

    if (diff <= 0) {
      document.getElementById('nitted-countdown').innerHTML = "Countdown finished!";
      return;
    }

    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    const hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
    const minutes = Math.floor((diff / (1000 * 60)) % 60);
    const seconds = Math.floor((diff / 1000) % 60);

    document.getElementById('nitted-countdown').innerHTML =
      `${days}d ${hours}h ${minutes}m ${seconds}s`;
  }

  updateCountdown();
  setInterval(updateCountdown, 1000);
})();
</script>

