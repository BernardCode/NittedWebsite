<script>
// Virtualized infinite vertical scroll gallery
(function() {
  var imageSources = [
    "{{ 'product-photo1.png' | asset_url }}",
    "{{ 'product-photo2.png' | asset_url }}",
    "{{ 'product-photo1.png' | asset_url }}",
    "{{ 'product-photo2.png' | asset_url }}"
  ];
  var galleryScroll = document.getElementById('nitted-vert-gallery-scroll');
  var gallery = document.getElementById('nitted-vert-gallery');
  var imgHeight = 260; // fallback, will update after first render
  var buffer = 2; // Number of images above and below viewport to keep

  // Helper to create an image element
  function createImg(idx) {
    var img = document.createElement('img');
    img.src = imageSources[idx % imageSources.length];
    img.alt = 'Nitted product photo ' + ((idx % imageSources.length) + 1);
    img.className = 'nitted-vert-img';
    img.loading = 'lazy';
    img.dataset.idx = idx;
    return img;
  }

  // State: which image index is at the top
  var topIdx = 0;
  var numImages = imageSources.length;

  // Initial render: fill with enough images to cover viewport + buffer
  function initialRender() {
    gallery.innerHTML = '';
    var n = Math.ceil(galleryScroll.offsetHeight / imgHeight) + 2 * buffer;
    for (var i = 0; i < n; i++) {
      gallery.appendChild(createImg(topIdx + i));
    }
    // Update imgHeight after first render
    var firstImg = gallery.querySelector('.nitted-vert-img');
    if (firstImg) imgHeight = firstImg.offsetHeight || imgHeight;
  }
  initialRender();

  // On scroll, add/remove images as needed
  function onScroll() {
    var scrollTop = galleryScroll.scrollTop;
    var imgs = Array.from(gallery.querySelectorAll('.nitted-vert-img'));
    if (imgs.length === 0) return;
    var firstImg = imgs[0];
    var lastImg = imgs[imgs.length - 1];
    var nVisible = Math.ceil(galleryScroll.offsetHeight / imgHeight);

    // If scrolled near bottom, append next image
    if (lastImg.offsetTop < scrollTop + galleryScroll.offsetHeight + buffer * imgHeight) {
      var nextIdx = parseInt(lastImg.dataset.idx, 10) + 1;
      gallery.appendChild(createImg(nextIdx));
    }
    // If scrolled near top, prepend previous image
    if (firstImg.offsetTop > scrollTop - buffer * imgHeight) {
      var prevIdx = parseInt(firstImg.dataset.idx, 10) - 1;
      gallery.insertBefore(createImg(prevIdx), firstImg);
      // Adjust scroll so content doesn't jump
      galleryScroll.scrollTop += imgHeight;
    }
    // Remove images far below viewport
    imgs = Array.from(gallery.querySelectorAll('.nitted-vert-img'));
    imgs.forEach(function(img) {
      if (img.offsetTop + imgHeight < scrollTop - buffer * imgHeight || img.offsetTop > scrollTop + galleryScroll.offsetHeight + buffer * imgHeight) {
        img.remove();
      }
    });
  }

  galleryScroll.addEventListener('scroll', onScroll);
  window.addEventListener('resize', function() {
    imgHeight = gallery.querySelector('.nitted-vert-img').offsetHeight || imgHeight;
    initialRender();
  });
})();

// Countdown timer
(function() {
  var countdownEl = document.getElementById('nitted-countdown');
  // Set to August 1st, 2024, midnight local time
  var target = new Date(2024, 7, 1, 0, 0, 0, 0); // Month is 0-indexed (7 = August)
  
  function updateCountdown() {
    var now = new Date();
    var diff = target - now;
    
    if (diff <= 0) {
      countdownEl.textContent = 'Drop is live!';
      return;
    }
    
    var days = Math.floor(diff / (1000*60*60*24));
    var hours = Math.floor((diff / (1000*60*60)) % 24);
    var mins = Math.floor((diff / (1000*60)) % 60);
    var secs = Math.floor((diff / 1000) % 60);
    
    countdownEl.textContent = days + 'd ' + hours + 'h ' + mins + 'm ' + secs + 's';
  }
  
  // Update immediately and then every second
  updateCountdown();
  setInterval(updateCountdown, 1000);
})();
</script>
