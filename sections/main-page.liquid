<script>
// Countdown Timer to August 1, 2025
(function() {
  function pad(n) { return n < 10 ? '0' + n : n; }
  function updateCountdown() {
    var target = new Date('2025-08-01T00:00:00Z');
    var now = new Date();
    var diff = target - now;
    if (diff < 0) diff = 0;
    var days = Math.floor(diff / (1000 * 60 * 60 * 24));
    var hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
    var minutes = Math.floor((diff / (1000 * 60)) % 60);
    var seconds = Math.floor((diff / 1000) % 60);
    document.getElementById('nitted-days').textContent = pad(days);
    document.getElementById('nitted-hours').textContent = pad(hours);
    document.getElementById('nitted-minutes').textContent = pad(minutes);
    document.getElementById('nitted-seconds').textContent = pad(seconds);
  }
  updateCountdown();
  setInterval(updateCountdown, 1000);
})();

// Coverflow-style carousel logic
(function() {
  // You can add more images here later
  var images = [
    { src: "{{ 'product-photo1.png' | asset_url }}", alt: "Shirt 1" },
    { src: "{{ 'product-photo2.png' | asset_url }}", alt: "Shirt 2" }
  ];
  var idx = 0;
  function updateCarousel() {
    var left = document.getElementById('carousel-left');
    var center = document.getElementById('carousel-center');
    var right = document.getElementById('carousel-right');
    var leftIdx = (idx + images.length - 1) % images.length;
    var rightIdx = (idx + 1) % images.length;
    left.src = images[leftIdx].src;
    left.alt = images[leftIdx].alt + ' Side';
    center.src = images[idx].src;
    center.alt = images[idx].alt + ' Center';
    right.src = images[rightIdx].src;
    right.alt = images[rightIdx].alt + ' Side';
  }
  setInterval(function() {
    idx = (idx + 1) % images.length;
    updateCarousel();
  }, 2500);
  updateCarousel();
})();
</script>

