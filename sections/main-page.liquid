  }
  .nitted-email-input {
    width: 100%;
    padding: 1.5rem 1.5rem;
    border-radius: var(--radius);
    border: 1.5px solid #ece6dd;
    font-size: 1.25rem;
    font-family: var(--font-body);
    background: #fff;
    outline: none;
    transition: border 0.2s;
    text-align: center;
