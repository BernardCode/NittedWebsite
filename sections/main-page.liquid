    border: 1.5px solid var(--black);
  }
  .nitted-email-btn {
    width: 100%;
    padding: 1.5rem 0;
    border-radius: var(--radius);
    border: none;
    background: var(--black);
    color: var(--beige);
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
    margin-top: 0.5rem;
  }
  .nitted-email-btn:hover, .nitted-email-btn:focus {
    background: #222;
  }
  .nitted-hero-cta-sub {
    font-size: 1.05rem;
    color: #444;
    margin-top: 0.7rem;
    text-align: center;
    margin-bottom: 2.2rem;
  }
  .nitted-drop-text {
    font-family: var(--font-heading);
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--black);
    margin: 2.2rem 0 0.5rem 0;
    text-align: center;
    letter-spacing: 0.02em;
  }
  .nitted-countdown {
    font-family: var(--font-body);
    font-size: 1.1rem;
    color: #222;
    text-align: center;
    margin-bottom: 1.5rem;
    letter-spacing: 0.04em;
  }
  .nitted-vert-gallery-container {
    width: 100vw;
    display: flex;
    justify-content: center;
    align-items: center;
    background: var(--beige);
    min-height: 320px;
    overflow: visible;
    position: relative;
    margin-bottom: 0;
  }
  .nitted-vert-gallery {
