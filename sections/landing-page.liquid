<script>
// Countdown Timer to September 1, 2025
(function() {
  function pad(n) { return n < 10 ? '0' + n : n; }
  function updateCountdown() {
    var target = new Date('2025-09-01T00:00:00Z');
    var now = new Date();
    var diff = target - now;
    if (diff < 0) diff = 0;
    var days = Math.floor(diff / (1000 * 60 * 60 * 24));
    var hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
    var minutes = Math.floor((diff / (1000 * 60)) % 60);
    var seconds = Math.floor((diff / 1000) % 60);
    document.getElementById('nitted-days').textContent = pad(days);
    document.getElementById('nitted-hours').textContent = pad(hours);
    document.getElementById('nitted-minutes').textContent = pad(minutes);
    document.getElementById('nitted-seconds').textContent = pad(seconds);
  }
  updateCountdown();
  setInterval(updateCountdown, 1000);
})();

// Rotating Product Images
(function() {
  const images = document.querySelectorAll('.nitted-rotating-image');
  const dots = document.querySelectorAll('.nitted-dot');
  let currentIndex = 0;
  const totalImages = images.length;

  function showImage(index) {
    // Hide all images
    images.forEach(img => img.classList.remove('active'));
    dots.forEach(dot => dot.classList.remove('active'));
    
    // Show current image and dot
    images[index].classList.add('active');
    dots[index].classList.add('active');
  }

  function nextImage() {
    currentIndex = (currentIndex + 1) % totalImages;
    showImage(currentIndex);
  }

  // Auto-rotate every 3 seconds
  setInterval(nextImage, 3000);

  // Click on dots to manually change image
  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      currentIndex = index;
      showImage(currentIndex);
    });
  });
})();

// Email Collection Form
(function() {
  const form = document.getElementById('nitted-email-form');
  const emailInput = document.getElementById('nitted-email');
  const submitBtn = document.getElementById('nitted-submit-btn');
  const messageDiv = document.getElementById('nitted-form-message');

  function showMessage(message, isSuccess = false) {
    messageDiv.textContent = message;
    messageDiv.style.display = 'block';
    messageDiv.style.backgroundColor = isSuccess ? '#d4edda' : '#f8d7da';
    messageDiv.style.color = isSuccess ? '#155724' : '#721c24';
    messageDiv.style.border = `1px solid ${isSuccess ? '#c3e6cb' : '#f5c6cb'}`;
  }

  function hideMessage() {
    messageDiv.style.display = 'none';
  }

  form.addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const email = emailInput.value.trim();
    if (!email) return;

    // Disable form during submission
    submitBtn.disabled = true;
    submitBtn.textContent = 'Joining...';
    hideMessage();

    try {
      // Create a customer account in Shopify using the registration endpoint
      const customerData = new URLSearchParams();
      customerData.append('form_type', 'customer_register');
      customerData.append('customer[email]', email);
      customerData.append('customer[password]', 'waitlist' + Date.now());
      customerData.append('customer[password_confirmation]', 'waitlist' + Date.now());
      customerData.append('customer[first_name]', 'Waitlist');
      customerData.append('customer[last_name]', 'Customer');
      customerData.append('customer[accepts_marketing]', '1');

      const response = await fetch('/account/register', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/x-www-form-urlencoded',
          'X-Requested-With': 'XMLHttpRequest'
        },
        body: customerData
      });

      if (response.ok) {
        showMessage('üéâ Welcome to the waitlist! You\'ll get first access to our September drop.', true);
        emailInput.value = '';
        form.reset();
        
        // Log successful registration
        console.log('Customer created successfully:', email);
      } else {
        throw new Error('Registration failed');
      }
    } catch (error) {
      console.error('Email collection error:', error);
      
      // Fallback: Store in localStorage and show success message
      const waitlistEmails = JSON.parse(localStorage.getItem('nitted-waitlist') || '[]');
      if (!waitlistEmails.includes(email)) {
        waitlistEmails.push(email);
        localStorage.setItem('nitted-waitlist', JSON.stringify(waitlistEmails));
      }
      
      showMessage('üéâ Welcome to the waitlist! You\'ll get first access to our September drop.', true);
      emailInput.value = '';
      form.reset();
      
      // Log for manual collection
      console.log('Waitlist email collected:', email);
      console.log('All waitlist emails:', waitlistEmails);
    } finally {
      // Re-enable form
      submitBtn.disabled = false;
      submitBtn.textContent = 'Join the Waitlist ‚Üí';
    }
  });
})();
